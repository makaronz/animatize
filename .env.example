# ANIMAtiZE Framework Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ANIMATIZE_ENV=production
LOG_LEVEL=info

# =============================================================================
# API KEYS
# =============================================================================
# OpenAI API Key (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
MAX_WORKERS=4
ENABLE_BATCH=true
BATCH_SIZE=10

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
IMAGE_MAX_SIZE_MB=10
VIDEO_MAX_DURATION_SEC=30
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
ENABLE_TELEMETRY=false

# =============================================================================
# DATABASE (Optional)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/animatize

# =============================================================================
# SECURITY
# =============================================================================
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# =============================================================================
# DEVELOPMENT SETTINGS (Only for development environment)
# =============================================================================
DEBUG=false
RELOAD=false
