  "workflow_recommendations": {
    "single_scene_generation": {
      "steps": [
        {
          "step": 1,
          "action": "Analyze scene description for primary movement type",
          "rules_to_consider": "Identify which ANIMAtiZE rules apply"
        },
        {
          "step": 2,
          "action": "Select appropriate model based on scene requirements",
          "model_selection_criteria": ["duration", "style", "complexity"]
        },
        {
          "step": 3,
          "action": "Apply rule-specific parameters",
          "parameter_optimization": "Use recommended_parameters from rule mapping"
        },
        {
          "step": 4,
          "action": "Enhance prompt with rule-specific details",
          "prompt_enhancements": "Add elements from prompt_enhancements list"
        },
        {
          "step": 5,
          "action": "Set temporal consistency parameters",
          "temporal_setup": "Match parameters to movement type"
        }
      ]
    },
    
    "multi_scene_generation": {
      "steps": [
        {
          "step": 1,
          "action": "Plan scene sequence and transitions",
          "considerations": ["character_consistency", "environmental_continuity"]
        },
        {
          "step": 2,
          "action": "Identify primary rules for each scene",
          "rule_consistency": "Maintain compatible rules across scenes"
        },
        {
          "step": 3,
          "action": "Set base seed and sequential seeds",
          "seed_strategy": "base_seed + scene_index"
        },
        {
          "step": 4,
          "action": "Maintain consistent parameters across scenes",
          "consistency_params": ["style", "temporal_consistency", "character_description"]
        },
        {
          "step": 5,
          "action": "Define transition types between scenes",
          "transition_selection": "Match transitions to narrative flow"
        }
      ]
    }
  },
  
  "integration_examples": {
    "example_1_character_closeup": {
      "description": "Close-up of character showing emotion",
      "primary_rules": ["movement_004_emotional_momentum", "movement_008_emotional_framing"],
      "model": "luma",
      "parameters": {
        "camera_type": "steadicam",
        "camera_movement": "dolly",
        "focal_length": 85,
        "motion_strength": 0.3,
        "temporal_consistency": 0.9,
        "cinematic_mode": true
      },
      "prompt_template": "[Character close-up]: [Subject] shows [emotion] through [micro-expression]. Camera slowly dollies in from medium to close-up, increasing intimacy. [Lighting] highlights emotional state. Cinematic, [style]."
    },
    
    "example_2_environmental_scene": {
      "description": "Forest scene with wind and particles",
      "primary_rules": ["movement_003_physics_based", "movement_006_atmospheric_response"],
      "model": "veo3_1",
      "parameters": {
        "particle_effects": true,
        "physics_simulation": true,
        "advanced_lighting": true,
        "temporal_consistency": 0.75,
        "motion_strength": 0.4
      },
      "prompt_template": "[Environment]: [Location] with [weather_condition]. Wind moves [elements] realistically with [physics_behavior]. [Light_quality] creates [atmospheric_effect]. Particles float naturally. [Style]."
    },
    
    "example_3_action_sequence": {
      "description": "Character performing action with camera tracking",
      "primary_rules": ["movement_001_pose_to_action", "movement_002_composition_guided"],
      "model": "kling",
      "parameters": {
        "camera_movement": "dolly",
        "motion_strength": 0.6,
        "temporal_consistency": 0.8,
        "frame_rate": 60
      },
      "prompt_template": "[Subject] transitions from [starting_pose] into [action], with [body_mechanics]. Camera follows along [compositional_lines], maintaining [framing]. Fast, dynamic, cinematic."
    }
  }
}
