{
  "version": "1.0.0",
  "description": "Mapping between AI video prompting parameters and ANIMAtiZE movement prediction rules",
  "last_updated": "2025-01-28",
  
  "rule_to_parameter_mapping": {
    "movement_001_pose_to_action": {
      "rule_name": "Pose-to-Action Continuation",
      "category": "character_action",
      "applicable_when": {
        "camera_type": ["static", "tripod"],
        "focus": "subject_movement"
      },
      "recommended_parameters": {
        "motion_strength": {
          "range": [0.4, 0.7],
          "description": "Moderate motion for natural character action"
        },
        "temporal_consistency": {
          "range": [0.8, 0.9],
          "description": "High consistency for smooth pose transitions"
        },
        "frame_rate": 30,
        "motion_smoothness": {
          "range": [0.7, 0.8],
          "description": "Smooth character animations"
        }
      },
      "prompt_enhancements": [
        "Add muscle tension descriptors",
        "Include weight distribution details",
        "Specify facial expression evolution",
        "Define movement path clearly"
      ]
    },
    
    "movement_002_composition_guided": {
      "rule_name": "Composition-Guided Camera Flow",
      "category": "camera_movement",
      "applicable_when": {
        "camera_type": ["pan", "tilt", "orbit", "steadicam"],
        "focus": "compositional_elements"
      },
      "recommended_parameters": {
        "camera_movement": ["pan", "tilt", "orbit"],
        "temporal_consistency": {
          "range": [0.85, 0.95],
          "description": "Very high consistency for smooth camera moves"
        },
        "motion_strength": {
          "range": [0.3, 0.5],
          "description": "Gentle motion following composition"
        }
      },
      "prompt_enhancements": [
        "Specify leading lines in composition",
        "Define rule of thirds positioning",
        "Describe depth layers explicitly",
        "Indicate negative space usage"
      ]
    },
    
    "movement_003_physics_based": {
      "rule_name": "Physics-Based Environmental Motion",
      "category": "environment_animation",
      "applicable_when": {
        "scene_includes": ["environmental_elements", "particles", "weather"],
        "focus": "realistic_physics"
      },
      "recommended_parameters": {
        "physics_simulation": true,
        "particle_effects": true,
        "motion_blur": {
          "range": [40, 60],
          "description": "Natural motion blur for physics"
        },
        "temporal_consistency": {
          "range": [0.75, 0.85],
          "description": "Balanced consistency for natural variation"
        }
      },
      "prompt_enhancements": [
        "Specify wind direction and strength",
        "Define material properties (weight, flexibility)",
        "Describe atmospheric conditions",
        "Include gravity effects"
      ]
    },
    
    "movement_004_emotional_momentum": {
      "rule_name": "Emotional Momentum Analysis",
      "category": "character_action",
      "applicable_when": {
        "camera_type": ["static", "dolly", "zoom"],
        "focus": "emotional_expression"
      },
      "recommended_parameters": {
        "expression_strength": {
          "range": [0.6, 0.8],
          "description": "Strong but natural emotional expression"
        },
        "temporal_consistency": {
          "range": [0.8, 0.9],
          "description": "Smooth emotional transitions"
        },
        "camera_movement": "dolly",
        "motion_strength": {
          "range": [0.3, 0.4],
          "description": "Subtle motion to enhance emotion"
        }
      },
      "prompt_enhancements": [
        "Detail micro-expressions",
        "Describe body tension changes",
        "Specify eye direction and focus",
        "Include hand gesture evolution"
      ]
    },
    
    "movement_005_depth_parallax": {
      "rule_name": "Depth Layer Parallax",
      "category": "camera_movement",
      "applicable_when": {
        "camera_type": ["dolly", "truck", "orbit", "drone"],
        "focus": "depth_perception"
      },
      "recommended_parameters": {
        "camera_movement": ["dolly", "truck", "orbit"],
        "focal_length": {
          "range": [35, 50],
          "description": "Natural perspective for parallax"
        },
        "temporal_consistency": {
          "range": [0.85, 0.95],
          "description": "High consistency for smooth parallax"
        },
        "motion_vectors": true
      },
      "prompt_enhancements": [
        "Define foreground, midground, background elements",
        "Specify relative motion speeds",
        "Describe distance between layers",
        "Include depth cues (atmospheric perspective)"
      ]
    },
    
    "movement_006_atmospheric_response": {
      "rule_name": "Atmospheric Response System",
      "category": "environment_animation",
      "applicable_when": {
        "scene_includes": ["weather", "time_of_day", "lighting_changes"],
        "focus": "atmospheric_conditions"
      },
      "recommended_parameters": {
        "advanced_lighting": true,
        "particle_effects": true,
        "temporal_consistency": {
          "range": [0.7, 0.85],
          "description": "Allow natural atmospheric variation"
        },
        "color_grading": true
      },
      "prompt_enhancements": [
        "Specify light quality (hard/soft)",
        "Define shadow direction and length",
        "Describe weather element intensity",
        "Include time progression indicators"
      ]
    },
    
    "movement_007_interaction_anticipation": {
      "rule_name": "Interaction Anticipation",
      "category": "character_action",
      "applicable_when": {
        "scene_includes": ["object_interaction", "character_reaching"],
        "focus": "intentional_action"
      },
      "recommended_parameters": {
        "object_tracking": true,
        "temporal_consistency": {
          "range": [0.85, 0.95],
          "description": "High consistency for precise interaction"
        },
        "motion_smoothness": {
          "range": [0.7, 0.85],
          "description": "Smooth intentional movements"
        }
      },
      "prompt_enhancements": [
        "Specify gaze direction toward object",
        "Describe hand position relative to target",
        "Define body orientation",
        "Include anticipatory gestures"
      ]
    },
    
    "movement_008_emotional_framing": {
      "rule_name": "Emotional Framing Progression",
      "category": "camera_movement",
      "applicable_when": {
        "camera_type": ["zoom", "dolly"],
        "focus": "emotional_intensity"
      },
      "recommended_parameters": {
        "camera_movement": ["zoom", "dolly"],
        "temporal_consistency": {
          "range": [0.9, 0.95],
          "description": "Very smooth for emotional progression"
        },
        "motion_strength": {
          "range": [0.2, 0.4],
          "description": "Gentle movement matching emotion"
        },
        "cinematic_mode": true
      },
      "prompt_enhancements": [
        "Define starting frame size (wide, medium, close)",
        "Specify ending frame size",
        "Describe emotional transition",
        "Include subject placement changes"
      ]
    }
  },
  
  "parameter_to_rule_mapping": {
    "camera_movement": {
      "static": ["movement_001", "movement_004"],
      "pan": ["movement_002", "movement_005"],
      "tilt": ["movement_002", "movement_005"],
      "zoom": ["movement_008"],
      "dolly": ["movement_005", "movement_008"],
      "orbit": ["movement_002", "movement_005"],
      "crane": ["movement_002"],
      "truck": ["movement_005"]
    },
    
    "physics_simulation": {
      "enabled": ["movement_003", "movement_006"]
    },
    
    "object_tracking": {
      "enabled": ["movement_007"]
    },
    
    "expression_strength": {
      "high": ["movement_004"]
    },
    
    "particle_effects": {
      "enabled": ["movement_003", "movement_006"]
    }
  },
  
