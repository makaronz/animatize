    "kling": {
      "provider": "Kwai",
      "specialization": "Realistic cinematic scenes",
      "max_duration": "5-10 seconds",
      "max_resolution": "1080p",
      "supported_modes": ["T2V", "I2V"],
      
      "prompt_structure": {
        "format": "[SUBJECT_DESCRIPTION] [SUBJECT_MOVEMENT] [ENVIRONMENT] [LIGHTING] [ATMOSPHERE] [CAMERA_MOVEMENT] [STYLE]",
        "patterns": {
          "CAMS": {
            "name": "Character-Action-Movement-Setting",
            "template": "[CHARACTER] performs [ACTION] in [ENVIRONMENT] lit by [LIGHTING], creating [ATMOSPHERE]. Camera [CAMERA_MOVEMENT].",
            "use_case": "Character-focused scenes"
          },
          "CINE": {
            "name": "Camera-Intent-Narrative-Emotion",
            "template": "[CAMERA_INTENT]: [SHOT_DESCRIPTION] with [ANGLE] and [MOVEMENT] to convey [NARRATIVE] and evoke [EMOTION].",
            "use_case": "Cinematic storytelling"
          }
        }
      },
      
      "controllability_parameters": {
        "aspect_ratio": {
          "type": "enum",
          "values": ["16:9", "9:16", "1:1"],
          "default": "16:9",
          "description": "Image proportions"
        },
        "duration": {
          "type": "range",
          "min": 5,
          "max": 10,
          "unit": "seconds",
          "default": 5,
          "description": "Video length"
        },
        "camera_movement": {
          "type": "enum",
          "values": ["static", "pan", "zoom", "dolly"],
          "default": "static",
          "description": "Camera motion type",
          "temporal_consistency_impact": "high"
        },
        "style": {
          "type": "enum",
          "values": ["cinematic", "realistic", "artistic"],
          "default": "cinematic",
          "description": "Visual style"
        },
        "quality": {
          "type": "enum",
          "values": ["standard", "high"],
          "default": "high",
          "description": "Generation quality"
        }
      },
      
      "best_practices": {
        "temporal_consistency": [
          "Use detailed descriptions for better coherence",
          "Avoid sudden lighting changes",
          "Maintain consistent subject description throughout",
          "Specify gradual transitions for camera movement"
